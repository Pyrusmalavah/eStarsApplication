<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/backbann"
    tools:context=".AuthenticationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:contentDescription="@string/drawer_pic_description"
            android:id="@+id/displayPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/security" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/username_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="@string/drawer_fname_hint"
                android:textColorHint="@color/brick"
                android:textColor="#B22222"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/username_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp"
                android:layout_toRightOf="@+id/username_info1"
                android:layout_toEndOf="@+id/username_info1"
                android:fontFamily="sans-serif-condensed"
                android:hint="@string/drawer_sname_hint"
                android:textColorHint="@color/brick"
                android:textColor="#B22222"
                android:textSize="30sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/user_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:hint="@string/drawer_mail"
            android:textColorHint="@color/brick"
            android:textColor="#B22222"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>